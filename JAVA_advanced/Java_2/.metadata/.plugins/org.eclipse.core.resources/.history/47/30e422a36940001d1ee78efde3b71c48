<%@ page language="java" contentType="text/html; charset=utf-8"
	pageEncoding="utf-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title>Insert title here</title>
</head>
<body>

	<form action="BtMayTinh_.jsp" method="get">
		Nhập a: <input type="number" name="a"
			value="<%=(request.getParameter("a") == null ? "0" : request.getParameter("a"))%>">
			<br>
			<br>
			
		Nhập b: <input type="number" name="b"
			value="<%=(request.getParameter("b") == null ? "0" : request.getParameter("b"))%>">
			<br>
			<br>
		<button type="submit" name="calculate" value="+">+</button>
		<button type="submit" name="calculate" value="-">-</button>
		<button type="submit" name="calculate" value="*">*</button>
		<button type="submit" name="calculate" value="/">/</button>
		<button type="submit" name="calculate" value="ptb2">Giải nghiệm ptb2</button>
	</form>


	<%
	String a = request.getParameter("a");
	String b = request.getParameter("b");
	String calculate = request.getParameter("calculate");
	if (a == null || b == null) {
		out.print("Please enter a & b ::::");
	} else {
		int aNo = Integer.parseInt(a);
		int bNo = Integer.parseInt(b);
		switch (calculate) {
		case "+": {
			out.print(aNo + " " + calculate + " " + bNo + "= " + (aNo + bNo));
			break;
		}
		case "-": {
			out.print(aNo + " " + calculate + " " + bNo + "= " + (aNo - bNo));
			break;
		}
		case "*": {
			out.print(aNo + " " + calculate + " " + bNo + "= " + (aNo * bNo));
			break;
		}
		case "/": {
			out.print(aNo + " " + calculate + " " + bNo + "= " + ((float) aNo / bNo));
			break;
		}
		default :{
			response.sendRedirect("ptb2.jsp");
		}
		}
	
	}
	%>




</body>
</html>