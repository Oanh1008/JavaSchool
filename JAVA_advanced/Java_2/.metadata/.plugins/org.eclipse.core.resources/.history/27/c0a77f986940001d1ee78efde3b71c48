	<form action="ptb2.jsp" method="post">
		Enter a: <input type="number" name="a"
			value="<%=(request.getParameter("a") == null ? "0" : request.getParameter("a"))%>">
		<br> <br> 
		Enter b: <input type="number" name="b"
			value="<%=(request.getParameter("b") == null ? "0" : request.getParameter("b"))%>">
		<br> <br> 
		Enter c: <input type="number" name="c"
			value="<%=(request.getParameter("c") == null ? "0" : request.getParameter("c"))%>">
		<br> <br>

		<button type="submit" name="calculate" value="ptb2">Solve</button>
	</form>


	<%
	String a = request.getParameter("a");
	String b = request.getParameter("b");
	String c = request.getParameter("c");
	String calculate = request.getParameter("calculate");
	if (a == null || b == null) {
		out.print("Please enter a,b,c ::::");
	} else {
		int aNo = a==null?0:Integer.parseInt(a);
		int bNo = b==null?0:Integer.parseInt(b);
		int cNo = c==null?0:Integer.parseInt(c);
		
		if (aNo == 0){
			if (bNo == 0){
				if(cNo == 0){
					out.print("Pt có vô số nghiệm !");
				}else{
					out.print("Pt vô nghiệm");
				}
			}else{
				out.print("Pt có 1 nghiệm duy nhât là x: "+((float)(-cNo)/bNo));
			}
		}else{
			 // tính delta
	        float delta = bNo*bNo - 4*aNo*cNo;
	        float x1;
	        float x2;
	        // tính nghiệm
	        if (delta > 0) {
	            x1 = (float) ((-bNo + Math.sqrt(delta)) / (2*aNo));
	            x2 = (float) ((-bNo - Math.sqrt(delta)) / (2*aNo));
	           out.println("Phương trình có 2 nghiệm là: "
	                    + "x1 = " + x1 + " và x2 = " + x2);
	        } else if (delta == 0) {
	            x1 = (-bNo / (2 * aNo));
	           out.println("Phương trình có nghiệm kép: "
	                    + "x1 = x2 = " + x1);
	        } else {
	          out.println("Phương trình vô nghiệm!");
	        }
		}
	}
	%>




